<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
    xsi:schemaLocation="
http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <jaxrs:server id="powergridService" address="/powergrid">
        <jaxrs:serviceBeans>
            <ref component-id="powergridBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean class="pnnl.goss.powergrid.server.impl.PowergridServiceImpl" id="powergridBean">
        <property name="dataServices" ref="dataServicesRef"></property>
        <property name="clientFactory" ref="clientFactoryServiceRef"></property>
    </bean>

    <reference id="dataServicesRef" interface="pnnl.goss.core.server.GossDataServices"></reference>
    <reference id="clientFactoryServiceRef" interface="pnnl.goss.core.ClientFactory"></reference>

    <!--<service id="pgService" interface="pnnl.goss.powergrid.server.PowergridService" ref="powergridBean">

    </service>-->


</blueprint>
