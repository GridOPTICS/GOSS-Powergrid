<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cxf="http://cxf.apache.org/blueprint/core"
    xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
    xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.1.0"
    xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
        http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
        http://aries.apache.org/xmlns/jpa/v1.0.0 http://aries.apache.org/xmlns/jpa/v1.0.0
        http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

<!--    <cxf:bus>-->
<!--        <cxf:features>-->
<!--            <cxf:logging/>-->
<!--        </cxf:features>-->
<!--    </cxf:bus>-->

    <!-- Create the powergrid webservice using the specified bean. -->
    <jaxrs:server id="powergridServiceWs" address="/powergrid">
        <jaxrs:serviceBeans>
            <ref component-id="powergridBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <!-- Create the bean that will be the service entry point to the powergrid services (not
    -		necessarily rest services, though that is how it works now!) -->
    <bean class="pnnl.goss.powergrid.server.impl.PowergridServiceImpl" id="powergridBean">
        <!--        <property name="dataServices" ref="dataServicesRef"></property>-->

        <!-- <jpa:context unitname="powergridPU" property="entityManagerFactory"/>-->
        <tx:transaction method="*" value="Required"/>

        <jpa:unit property="entityManagerFactory" unitname="powergridPU" />

        <property name="clientFactory" ref="clientFactoryServiceRef">
        </property>
        <!--<jpa:unit property="entityManager" unitname="mysqlPU" />-->
        <!--<jpa:context property="entityManager" unitname="mysqlPU" /> <tx:transaction method="*"
            value="Required" />-->

    </bean>


    <!-- Reference the powergridService that is already in osgi. -->
    <service id="powergridService" ref="powergridBean" interface="pnnl.goss.powergrid.server.PowergridServiceREST" />

    <!-- Reference to the client factory that is already in osgi. -->
    <reference id="clientFactoryServiceRef" interface="pnnl.goss.core.ClientFactory" />

</blueprint>
